package org.openshift.quickstarts.decisionserver.hellorules

query "get greeting"()
    greeting : Greeting()
end

query "get properties"()
    props : Props()
end

rule "greet person"
    when
        person : Person()
    then
        String salutation = "Hello " + person.getName() + "!";
        System.out.println("********** HelloRules DRL: " + salutation + " **********");
        insert(new Greeting(salutation));
end

rule "read props"
    when
        name : PropsName();
    then
        insert(Props.read(name.getName()))
end
